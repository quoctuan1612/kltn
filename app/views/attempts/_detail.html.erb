<div class="modal-dialog modal-lg modal-show-attempt">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Chi tiết lần thi</h4>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-lg-4">
          <div class="block">
            <div class="block-title">
              <h4>
                <i class="fa fa-info-circle"></i>
                Thông tin lần thi
              </h4>
            </div>

            <div class="row">
              <div class="col-sm-1"><i class="fa fa-file-text"></i></div>
              <div class="col-sm-10"><strong>Tên đề thi:</strong></div>
            </div>
            <div class="row">
              <div class="col-sm-1"></div>
              <div class="col-sm-10">
                <p><%= @attempt.exam_title %></p>
              </div>
            </div>
            <hr>

            <div class="row">
              <div class="col-sm-1"><i class="fa fa-bullseye"></i></div>
              <div class="col-sm-10"><strong>Kết quả:</strong></div>
            </div>
            <div class="row">
              <div class="col-sm-1"></div>
              <div class="col-sm-10">
                <span><%= @attempt.score %>/<%= @attempt.attempt_questions.count %> <%= raw @attempt.result %></span>
              </div>
            </div>
            <hr>

            <div class="row">
              <div class="col-sm-1"><i class="fa fa-book"></i></div>
              <div class="col-sm-10"><strong>Thuộc danh mục:</strong></div>
            </div>
            <div class="row">
              <div class="col-sm-1"></div>
              <div class="col-sm-10">
                <p><%= @attempt.exam_category_name %></p>
              </div>
            </div>
            <hr>

            <div class="row">
              <div class="col-sm-1"><i class="fa fa-toggle-on"></i></div>
              <div class="col-sm-10"><strong>Trạng thái:</strong></div>
            </div>
            <div class="row">
              <div class="col-sm-1"></div>
              <div class="col-sm-10">
                <p class=" label label-<%= @attempt.label_status %> ">
                  <%= @attempt.i18n_status %>
                </p>
              </div>
            </div>
            <hr>

            <div class="row">
              <div class="col-sm-1"><i class="fa fa-clock-o"></i></div>
              <div class="col-sm-10"><strong>Thời gian hoàn thành:</strong></div>
            </div>
            <div class="row">
              <div class="col-sm-1"></div>
              <div class="col-sm-10">
                <%= Time.at(@attempt.spent_time || @attempt.exam_duration).utc.strftime("%H:%M:%S") %>
              </div>
            </div>
            <hr>

            <div class="row">
              <div class="col-sm-1"><i class="fa fa-pencil"></i></div>
              <div class="col-sm-10"><strong>Ngày làm:</strong></div>
            </div>
            <div class="row">
              <div class="col-sm-1"></div>
              <div class="col-sm-10">
                <p><%= @attempt.created_at.localtime.strftime("%H:%M:%S %d-%m-%Y") %></p>
              </div>
            </div>
            <hr>
          </div>
        </div>
        <div class="col-lg-8">
          <div class="block">
            <div class="block-title">
              <h4>
                <i class="fa fa-info-circle"></i>
                Nội dung lần thi của bạn
              </h4>
            </div>
            <div class="list-question-show-exam">
              <%= render partial: "attempt_question", collection: @attempt.attempt_questions, as: :attempt_question %>
            </div>
            <hr>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
