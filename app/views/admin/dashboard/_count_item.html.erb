<div class="col-sm-6 col-md-6">
  <%= link_to path do %>
    <div class="panel mini-box">
      <span class="fa box-icon <%= icon %>"></span>
      <div class="box-content">
        <h4 class="box-title"><%= count %></h4>
        <p class="box-desc"><b><%= desc %></b></p>
      </div>
    </div>
  <% end %>
</div>
