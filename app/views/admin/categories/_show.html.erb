<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Chi tiết danh mục</h4>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-3 title-of-row">
          <strong> Tên danh mục :</strong>
        </div>
        <div class="col-md-9">
          <pre class="category-description"><%= @category.name %></pre>
        </div>
      </div><br>
      <div class="row">
        <div class="col-md-3 title-of-row">
          <strong> Mô tả :</strong>
        </div>
        <div class="col-md-7">
          <pre class="category-description"><%= @category.description %></pre>
        </div>
      </div>
    </div>
  </div>
</div>
