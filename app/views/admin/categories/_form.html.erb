<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title"><%= @title %></h4>
    </div>
    <div class="modal-body">
      <fieldset class="simple-form-wrapper">
        <%= simple_form_for [:admin, @category], remote: true do |f| %>
          <div class="form-group">
            <%= f.input :name, placeholder: "Nhập tên ...", label: "Tên",
              input_html: {class: "form-control"}, required: true %>
          </div>
          <div class="text-danger js-name-errors"></div>
          <div class="form-group">
            <%= f.input :description,
              placeholder: "Nhập mô tả ...", label: "Mô tả",
              input_html: {class: "form-control input-category-desc"}, required: true %>
          </div>
          <div class="text-danger js-description-errors"></div>
          <div class="form-group form-actions form-button-wrapper text-center">
            <span>
              <%= f.button :button, type: :submit, title: "Lưu",
                class: "btn btn-sm btn-primary", name: :submit do %>
                <i class="fa fa-save"></i>
                Lưu
              <% end %>
            </span>
          </div>
        <% end %>
      </fieldset>
    </div>
  </div>
</div>
